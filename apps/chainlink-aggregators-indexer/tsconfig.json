{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"]
	},
	"include": [
		"src/**/*",
		"ponder.config.ts",
		"ponder.schema.ts",
		"ponder-env.d.ts"
	],
	"exclude": ["node_modules", "dist"]
}
